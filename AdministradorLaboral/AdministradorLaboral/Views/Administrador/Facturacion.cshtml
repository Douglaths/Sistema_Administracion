@model AdministradorLaboral.Models.Facturacion

@{
    ViewBag.Title = "Crear Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Crear Factura</h2>

    <form method="post" action="@Url.Action("CrearFactura", "Administrador")">
        <div class="form-group">
            <label for="citaId">Cita</label>
            <select class="form-control" id="citaId" name="citaId">
                @foreach (var cita in ViewBag.Citas)
                {
                    <option value="@cita.Id">@cita.NombreCliente - @cita.Servicio</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="total">Total a Pagar</label>
            <input type="number" class="form-control" id="total" name="total" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="metodoPago">Método de Pago</label>
            <select class="form-control" id="metodoPago" name="metodoPago" required>
                <option value="Efectivo">Efectivo</option>
                <option value="Tarjeta">Tarjeta</option>
            </select>
        </div>

        <div class="form-group">
            <label for="detalles">Detalles</label>
            <textarea class="form-control" id="detalles" name="detalles" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Crear Factura</button>
    </form>
</div>
