<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" crossorigin="anonymous">
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css' rel='stylesheet' />
    <style>
        body {
            display: flex;
            background-color: #e1e6f0; /* Gris Claro */
        }

        .select2-container {
            width: 100% !important;
        }

        .select2-dropdown {
            width: auto !important;
            min-width: 100% !important;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #416ddf; /* Azul */
            color: #e1e6f0; /* Gris Claro */
            transition: width 0.3s;
            position: relative;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar .user-info {
                padding: 15px;
                text-align: center;
                transition: opacity 0.3s;
                color: #e1e6f0; /* Gris Claro */
            }

            .sidebar.collapsed .user-info {
                opacity: 0;
            }

            .sidebar .user-info i {
                margin-right: 10px;
                color: #b2bdd4; /* Azul Claro Grisáceo */
            }

            .sidebar .nav-item {
                padding: 10px;
            }

                .sidebar .nav-item .nav-link {
                    color: #e1e6f0; /* Gris Claro */
                }

                    .sidebar .nav-item .nav-link:hover {
                        background-color: #6c6c6c; /* Gris Oscuro */
                    }

                .sidebar .nav-item i {
                    margin-right: 10px;
                    color: #b2bdd4; /* Azul Claro Grisáceo */
                }

            .sidebar.collapsed .nav-item i {
                margin-right: 0;
            }

            .sidebar.collapsed .nav-item .nav-link span {
                display: none;
            }

        .collapse {
            transition: height 0.5s ease;
        }

        .nav-link {
            cursor: pointer;
        }

        .nav-item .nav-link span {
            margin-left: 10px;
        }



        .content {
            flex-grow: 1;
            padding: 20px;
            background-color: #e1e6f0; /* Gris Claro */
            color: #747474; /* Gris Oscuro */
        }

        .toggle-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            color: #e1e6f0; /* Gris Claro */
        }

        footer {
            color: #acacac; /* Gris Neutro */
        }
    </style>
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="user-info">
            <i class="fas fa-user"></i>
            <h5>@ViewBag.Username</h5>
        </div>
        <div class="toggle-btn" id="toggle-btn">
            <i class="fas fa-angle-left"></i>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#dashboardSubmenu" role="button" aria-expanded="false" aria-controls="dashboardSubmenu">
                    <i class="fas fa-chart-bar"></i> <span>DashBoard</span>
                </a>
                <div class="collapse" id="dashboardSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> <span>Analíticas</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> <span>Analíticas</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#centrosSubmenu" role="button" aria-expanded="false" aria-controls="centrosSubmenu">
                    <i class="fas fa-building"></i> <span>Centros</span>
                </a>
                <div class="collapse" id="centrosSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Centros","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Registro Centro</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> <span>Asignar Personal</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#personalSubmenu" role="button" aria-expanded="false" aria-controls="personalSubmenu">
                    <i class="fas fa-building"></i> <span>Personal</span>
                </a>
                <div class="collapse" id="personalSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Personal","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Registro Personal</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> <span>Rendimiento</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#clienteSubmenu" role="button" aria-expanded="false" aria-controls="clienteSubmenu">
                    <i class="fas fa-building"></i> <span>Clientes</span>
                </a>
                <div class="collapse" id="clienteSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Clientes","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Registro Cliente</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fas fa-chart-bar"></i> <span>Historial Clientes</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#citasSubmenu" role="button" aria-expanded="false" aria-controls="citasSubmenu">
                    <i class="fas fa-building"></i> <span>Citas</span>
                </a>
                <div class="collapse" id="citasSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Citas","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Agendar Cita</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("CitasHistorial","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Historial Citas</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="collapse" href="#facturacionSubmenu" role="button" aria-expanded="false" aria-controls="facturacionSubmenu">
                    <i class="fas fa-building"></i> <span>Facturacion</span>
                </a>
                <div class="collapse" id="facturacionSubmenu" data-parent="#sidebar">
                    <ul class="nav flex-column ml-3">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Facturacion","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Facturacion</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("FacturacionHistorial","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Historial de facturacion</span></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Servicios","Administrador", new {userName = ViewBag.UserName, userId = ViewBag.userId, userCenter = ViewBag.userCenter, userRole = ViewBag.userRole})"><i class="fas fa-chart-bar"></i> <span>Servicios</span></a>
            </li>
            <!-- Más opciones con submenús como el anterior -->
        </ul>
    </div>


    <div class="content">
        @RenderBody()

    </div>

    <script>
        $(document).ready(function () {
            $('.collapse').on('show.bs.collapse', function () {
                $(this).prev().find('i').removeClass('fa-angle-down').addClass('fa-angle-up');
            });

            $('.collapse').on('hide.bs.collapse', function () {
                $(this).prev().find('i').removeClass('fa-angle-up').addClass('fa-angle-down');
            });
        });

    </script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.getElementById('toggle-btn').addEventListener('click', function () {
            var sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
            var icon = this.querySelector('i');
            if (sidebar.classList.contains('collapsed')) {
                icon.classList.remove('fa-angle-left');
                icon.classList.add('fa-angle-right');
            } else {
                icon.classList.remove('fa-angle-right');
                icon.classList.add('fa-angle-left');
            }
        });
    </script>
</body>
</html>
